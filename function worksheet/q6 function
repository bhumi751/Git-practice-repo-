function isLongerThanFive(str) {
    // Check if the input is a valid string
    if (typeof str !== "string") {
        return "Please enter a valid string.";
    }

    // Check if the string length is greater than 5
    if (str.length > 5) {
        return "The string is longer than 5 characters.";
    } else {
        return "The string is 5 characters or shorter.";
    }
}

// Example usage:
console.log(isLongerThanFive("hello"));     // Output: The string is 5 characters or shorter.
console.log(isLongerThanFive("welcome"));   // Output: The string is longer than 5 characters.
console.log(isLongerThanFive("hi"));        // Output: The string is 5 characters or shorter.
