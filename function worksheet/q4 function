function checkEvenOrOdd(number) {
    // Check if the input is a valid number
    if (isNaN(number)) {
        return "Please enter a valid number.";
    }

    // Determine if the number is even or odd
    if (number % 2 === 0) {
        return "The number is even.";
    } else {
        return "The number is odd.";
    }
}

// Example usage:
console.log(checkEvenOrOdd(10));   // Output: The number is even.
console.log(checkEvenOrOdd(7));    // Output: The number is odd.
console.log(checkEvenOrOdd(0));    // Output: The number is even.
